@model IEnumerable<Web.Models.VATTU>

@{
    ViewBag.Title = "Danh sách vật tư";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    int Stt = ViewBag.I;

}



<h2 class="display-6 text-capitalize lb-page">Danh sách các vật tư hiện có </h2>
<form action="/vattu/theanh" method="get">
    <input type="text" name="timkiem" required />
    <button type="submit">Tìm kiếm</button>
</form>
<br />

<a class="btn mb-2 add-new" e-type="create" href="#" style="background-color: rgb(154, 192, 173)"><i class="fa-solid fa-plus"></i> Nhập kho</a>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">
                Tên vật tư
            </th>
            <th scope="col">
                Tổng số lượng
            </th>
            <th scope="col">
                Đơn giá
            </th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(Stt++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenvattu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.giatien) VND
                </td>
                <td>
                    <a e-type="edit" e-id="@item.mavt" class="btn bg-secondary text-white"><i class="fa-solid fa-pen-to-square"></i> Sửa</a>
                    <i class="fa-brands fa-squarespace fs-5"></i>
                    <a e-id="@item.mavt" e-type="delete" class="btn text-white" style="background-color: rgb(200, 103, 122)"><i class="fa-solid fa-trash-can"></i> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
